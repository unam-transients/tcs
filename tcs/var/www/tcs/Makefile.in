INSTALL_DIR			:=	$(prefix)/var/www/tcs/

include ../../../Makefile.epilog

install-crontab			:
	sudo -u www-data crontab <crontab

install-webcam-link		:
	sudo mkdir -p $(INSTALL_DIR)
	sudo rm -f $(INSTALL_DIR)/webcam
	sudo ln -s $(prefix)/var/tcs/latest/webcam $(INSTALL_DIR)
	
