#\
umask 0; PATH=/usr/local/opt/tcl-tk/bin:$PATH exec tclsh8.6 -encoding "utf-8" "$0" ${1+"$@"}

source [file join $::env(tcsprefix) "lib" "tcs" "packages.tcl"]

package require "client"
package require "coroutine"

# Parse the arguments. The first argument is the server name.
if {[llength $argv] != 1} {
  puts stderr "usage: tcs wait server"
  exit 1
}
set server  [lindex $argv 0]

# Define a background error handler.
proc bgerror {message} {
  puts stderr "tcs wait: bgerror: $message"
  exit 1
}

proc waitcoroutine {server} {
  if {[catch {
    client::wait $server
  } result]} {
    puts stderr "tcs wait: error: $result"
    exit 1
  }
  exit 0
}

coroutine::create ::waitcoroutine $server
coroutine::start
