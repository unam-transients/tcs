export PATH=/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/gnu-getopt/bin:/bin:/usr/bin:/usr/local/bin

sudo -v

libexecdir="$tcsprefix/libexec/tcs"
program="tcs $(basename "$0")"

usageerror () {
  echo 1>&2 "usage: $program [-d] [--] servername [...]"
  echo 1>&2 "usage: $program [-d] [-f] [--] servername"
  echo 1>&2 "usage: $program [-d] [-a] [--]"
  exit 1
}

host=$(uname -n | sed 's/\..*//' | tr '[A-Z]' '[a-z]')
case "$host" in
oan-coatli-control)
  allargs="html gcntan 1 sensors power weather 1 target 1 moon sun 1 secondary enclosure mount 1 telescope 1 executor selector supervisor"
  ;;
oan-coatli-instrument)
  allargs="C0 1 instrument"
  ;;
oan-coatli-platform)
  allargs="lights heater"
  ;;
oan-ddoti-control)
  allargs="html gcntan 1 sensors power weather 1 target 1 moon sun 1 enclosure mount 1 telescope instrument 1 executor selector supervisor"
  ;;
oan-ddoti-platform)
  allargs="lights heater"
  ;;
oan-ddoti-instrument0)
  allargs="C2 C4"
  ;;
oan-ddoti-instrument1)
  allargs="C1 C3"
  ;;
ohp-colibri-control)
  allargs="html 1 sensors power weather plc 1 target 1 moon sun 1 telescopecontroller 1 covers secondary mount 1 telescope instrument 1 executor selector supervisor"
  ;;
ohp-colibri-detectors)
  allargs="instrument C0"
  ;;
*-test-*)
  allargs="log 1 html 1 target 1 moon sun sensors weather C0 1 telescope instrument 1 executor selector supervisor"
  ;;
esac

optstring=adf
all=false
debug=false
foreground=false
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  -a)
    all=true
    shift 1
    ;;
  -d)
    debug=true
    shift 1
    ;;
  -f)
    foreground=true
    shift 1
    ;;
  *)
    usageerror
    ;;
  esac
done
shift

if $all && $foreground
then
  usageerror
elif $all && test $# != 0
then
  usageerror
elif ! $all && test $# = 0
then
  usageerror
elif $foreground && test $# != 1
then
  usageerror
fi

if $all
then
  set -- $allargs
fi

for arg in "$@"
do
  case $arg in
  [0-9]*)
    sleep $arg
    ;;
  *)
    server=${arg}
    fullserver="$libexecdir"/${server}server
    pids=$(pgrep -u root -f $fullserver)
    if test -z "$pids"
    then
      if test -x $fullserver
      then
        if $foreground
        then
          sudo tcsprefix="$tcsprefix" TCSLOGDEBUG=$debug TCSLOGTOSTDERR=true $fullserver
        else
          sudo tcsprefix="$tcsprefix" TCSLOGDEBUG=$debug nohup $fullserver >/dev/null 2>&1 &
          printf '%5d   %s\n' $! $arg
        fi
      else
        echo 1>&2 "$program: error: invalid server \"$server\"."
        exit 1
      fi
    fi
    ;;
  esac
done

exit 0
