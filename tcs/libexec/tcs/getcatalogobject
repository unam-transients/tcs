export PATH=/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/gnu-getopt/bin:/bin:/usr/bin:/usr/local/bin

program=$(basename "$0")

usageerror () {
  echo 1>&2 "usage: $program [-d catalogdir] [--] catalogname objectname"
  exit 1
}

optstring="d:"
catalogdir=/usr/local/share/tcs/catalog
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  -d)
    catalogdir="$2"
    shift 2
    ;;
  *)
    usageerror
    ;;
  esac
done
shift
if test $# != 2
then
  usageerror
fi
catalogname="$1"
objectname="$2"

if test -e "$catalogname"
then
  catalogpath="$catalogname"
elif test -e "$catalogdir"/"$catalogname"
then
  catalogpath="$catalogdir"/"$catalogname"
else
  echo 1>&2 "error: unable to find catalog \"$catalogname\"."
  exit 1
fi

expand "$catalogpath" |
sed "
/^ *#/d
/^ *$objectname /{
  s/^ *$objectname *//
  q
}
d
"

exit 0
