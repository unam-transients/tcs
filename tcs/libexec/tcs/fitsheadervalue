program="tcs $(basename "$0")"

usageerror () {
  echo 1>&2 "usage: $program [-l] [--] key [fitsfile ...]"
  exit 1
}

optstring="l"
list=false
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  -l)
    list=true
    shift 1
    ;;
  *)
    usageerror
    ;;
  esac
done
shift
case "$#" in
0)
  usageerror
  ;;
1)
  key="$1"
  set -- "/dev/stdin"
  ;;
*)
  key="$1"
  shift
  ;;
esac

squote="'"
for file in "$@"
do
  tcs fitsheader -- "$file" |
  sed 's/=/ /' | 
  awk -v key="$key" -v fitsfile="$fitsfile" -v list=$list '
  $1 == key {
    if (match($2, "'$squote'") == 1) {
      sub("^[^'$squote']*'$squote'", "");
      sub("'$squote'.*", "");
      printf("%s", $0);
    } else {
      printf("%s", $2);
    }
    if (list == "true") {
      printf("\t%s", fitsfile);
    }
    printf("\n");
    exit(0);
  }
  $1 == "END" {
    exit(1);
  }
  ' || exit 1
done

exit 0
