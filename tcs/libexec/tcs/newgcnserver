    # "gcn.classic.voevent.SWIFT_BAT_MONITOR",
    # "gcn.classic.voevent.SWIFT_BAT_QL_POS",
    # "gcn.classic.voevent.SWIFT_BAT_SCALEDMAP",
    # "gcn.classic.voevent.SWIFT_BAT_SLEW_POS",
