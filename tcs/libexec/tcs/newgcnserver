    # "gcn.classic.voevent.SWIFT_FOM_PPT_ARG_ERR",
    # "gcn.classic.voevent.SWIFT_FOM_SAFE_POINT",
    # "gcn.classic.voevent.SWIFT_FOM_SLEW_ABORT",
    # "gcn.classic.voevent.SWIFT_POINTDIR",
    # "gcn.classic.voevent.SWIFT_SC_SLEW",
