#\
umask 0; PATH=/usr/local/opt/tcl-tk/bin:$PATH exec tclsh8.6 -encoding "utf-8" "$0" ${1+"$@"}

source [file join [file dirname [info script]] ".." "lib" "tcs" "packages.tcl"]

package require "config"
package require "server"
package require "power"
package require "coroutine"

config::setdefaultvalue "emergencystop" "defaultoutletgroups" {}

if {[llength $argv] == 0} {
  set outletgroups [config::getvalue "emergencystop" "defaultoutletgroups"]
} else {
  set outletgroups $argv
}

set i 0

proc emergencystop {outletgroup} {
  global i
  incr i
  log::info "stopping $outletgroup."
  power::emergencystop $outletgroup
  incr i -1
}

proc exitifdone {} {
  global i
  if {$i == 0} {
    log::info "done."
    exit 0
  }
}

foreach outletgroup $outletgroups {
  coroutine::create "emergencystop $outletgroup"
}

coroutine::every 1000 exitifdone
coroutine::start
