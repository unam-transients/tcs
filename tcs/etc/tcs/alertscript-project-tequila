name="$1"
origin="$2"
identifier="$3"
type="$4"

timestamp="$(date +"%Y-%m-%d %H:%M.%S")"

priority=""
case $origin in
swift)
  priority="normal"
  url="https://gcn.gsfc.nasa.gov/other/$blockidentifier.swift"
  group="grb-group"
  ;;
fermi)
  priority="normal"
  url="https://gcn.gsfc.nasa.gov/other/$blockidentifier.fermi"
  group="grb-group"
  ;;
lvc)
  priority="normal"
  url="https://gracedb.ligo.org/superevents/$eventidentifier"
  group="gw-group"
  ;;
esac

if test "$priority" != ""
then
  echo "$timestamp: TEQUILA has received a $origin alert for $name (identifier $identifier type $type)." |
  $tcsprefix/bin/tcs sendpushover \
    -P "$priority" \
    -U "$url" \
    -s "TEQUILA: $origin $type alert for $name" \
    "$group"
fi

exit 0
