	docs-ddoti/documentation.html
docs-ddoti/index.html	    	:	docs-ddoti/index.md
docs-ddoti/documentation.html	:	docs-ddoti/documentation.md

install-ddoti			:	install-linux

clean-ddoti				:
	-rm -f docs-ddoti/*.html
	
########################################################################

all-colibri			    	    :	\
