export PATH=/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/gnu-getopt/bin:/bin:/usr/bin:/usr/local/bin

trap '' HUP

program="tcs $(basename "$0")"

usageerror () {
  echo 1>&2 "usage: $program [--] destination"
  exit 1
}

optstring=
if ! getopt -qQ -- "$optstring" "$@"
then
  usageerror
fi
eval set -- "$(getopt -q -- "$optstring" "$@")"
while test "$1" != "--"
do
  case "$1" in
  *)
    usageerror
    ;;
  esac
done
shift
if test $# != 1
then
  usageerror
fi
destination="$1"

cd "$tcsprefix"/var/tcs
while true
do
  rsync -ah *finder "$destination"
  sleep 5
done
